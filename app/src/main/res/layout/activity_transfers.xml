<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Transfers">

    <android.support.v7.widget.Toolbar
        android:id="@+id/TransfersToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:title="Transfers"
        app:titleTextColor="@color/colorWhite"
        android:elevation="@dimen/cardview_default_elevation"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="35dp"
                android:backgroundTint="@color/colorPrimary"
                app:cardElevation="@dimen/cardview_default_elevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="8dp"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SAVINGS ACCOUNT"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="NGN 550,28.53"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"
                        android:textAppearance="?android:textAppearanceMedium"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardElevation="@dimen/cardview_default_elevation"
                app:cardCornerRadius="@dimen/cardview_default_radius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="50dp">

                    <android.support.v7.widget.CardView
                        android:id="@+id/btn_transferToMayFresh"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:backgroundTint="@color/colorPrimary"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        app:cardCornerRadius="@dimen/cardview_default_radius"
                        app:cardElevation="@dimen/cardview_default_elevation">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_margin="16dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="8"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:gravity="center_vertical"
                                android:text="Transfer to MayFresh Account"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/btn_transferToOtherBank"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:backgroundTint="@color/colorPrimary"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        app:cardCornerRadius="@dimen/cardview_default_radius"
                        app:cardElevation="@dimen/cardview_default_elevation">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_margin="16dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="8"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:gravity="center_vertical"
                                android:text="Transfer to Other Bank"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Copyright: MayFresh Bank Plc"
                android:textAlignment="center"
                android:gravity="bottom"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>